  <!-- Redirect otomatis ke situs asli dengan query -->
  <script>
    // Ambil query parameter
    const params = new URLSearchParams(window.location.search);
    const nomor = params.get("no") || "001";   // default nomor 001
    const nama = params.get("nama") || "";     // default kosong

    // Tentukan prefix dari nama file
    const fileName = window.location.pathname.split("/").pop().replace(".html","").toLowerCase(); // nk-f
    const prefix = fileName.split("-")[0]; // nk, nu, ni
    const suffix = fileName.split("-")[1]; // f, tf, t, dll

    // Bangun URL asli
    const target = `https://idam.lovestoblog.com/${prefix}-${nomor}-${suffix}/?nama=${encodeURIComponent(nama)}`;

    // Redirect otomatis
    window.location.href = target;
  </script>
</head>
<body>
  <p>Jika tidak diarahkan otomatis, <a id="link" href="#">klik di sini</a>.</p>
  <script>
    const params = new URLSearchParams(window.location.search);
    const nomor = params.get("no") || "001";
    const nama = params.get("nama") || "";
    const fileName = window.location.pathname.split("/").pop().replace(".html","").toLowerCase();
    const prefix = fileName.split("-")[0];
    const suffix = fileName.split("-")[1];
    document.getElementById("link").href = `https://idam.lovestoblog.com/${prefix}-${nomor}-${suffix}/?nama=${encodeURIComponent(nama)}`;
  </script>
</body>
